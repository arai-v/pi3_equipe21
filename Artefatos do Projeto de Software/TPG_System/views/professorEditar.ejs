<%-include('partials/header.ejs')%>
        <div class="container-fluid plano-de-fundo-2">
            <div class="row">
                <div class="col"></div>
            </div>
            <div class="row mt-5">
                <div class="d-flex justify-content-center">
                    <div class="col-4">
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-5">
                <div class="col-4 d-flex distancia3 bg-dark rounded-4 justify-content-center text-white">
                    <div class="row align-items-center">
                        <form action="/professores/update/<%= professor.id%>" method="POST">
                            <div class="text-center altura">
                                <label class="fw-bold fs-3">Edição de Aluno</label>
                            </div>
                            <div class="row g-5">
                                <div class="col-md">
                                  <div>
                                    <label class="form-label fs-5 fw-semi-bold mt-5">Nome:</label>
                              <input type="text" class="form-control border-0 border-bottom border-secondary" value="<%= professor.nome%>" id="nome" name="nome" required>
                                  </div>
                                </div>
                                <div class="col-md"><div>
                                    <label class="form-label fs-5 fw-semi-bold mt-5">Endereço:</label>
                              <input type="text" class="form-control border-0 border-bottom border-secondary" value="<%= professor.endereco%>" id="endereco" name="endereco" required>
                                  </div>
                                </div>
                              </div>
                              <div class="row g-5">
                                <div class="col-md"><div>
                                    <label class="form-label fs-5 fw-semi-bold mt-5">Telefone:</label>
                              <input type="text" class="form-control border-0 border-bottom border-secondary" value="<%= professor.telefone%>" id="telefone" name="telefone" required>
                                  </div>
                                </div>
                                <div class="col-md"><div>
                                    <label class="form-label fs-5 fw-semi-bold mt-5">CPF:</label>
                              <input type="text" class="form-control border-0 border-bottom border-secondary" value="<%= professor.cpf%>" id="cpf" name="cpf" required>
                                  </div>
                                </div>
                              </div>
                              <div class="row g-5">
                                <div class="col-md">
                                  <div>
                                    <label class="form-label fs-5 fw-semi-bold mt-5">Email:</label>
                              <input type="text" class="form-control border-0 border-bottom border-secondary" value="<%= professor.email%>" id="email" name="email" required>
                                  </div>
                                </div>
                                <div class="col-md">
                                    <label class="form-label fs-5 fw-semi-bold mt-5">Senha:</label>
                                    <input type="text" class="form-control border-0 border-bottom border-secondary" value="<%= professor.senha%>" id="senha" name="senha" required>
                                </div>
                                </div>
                                <input type="hidden" class="form-control border-0 border-bottom border-secondary" value="<%= professor.id%>" name="id" required>
                                <div class="row d-flex justify-content mt-5">
                                    <button type="submit" class="btn btn-primary">Alterar</button>
                                  </div>
                              </div>
                        </form>
                    </div>
                </div>
            </div>
<%-include('partials/footer.ejs')%>