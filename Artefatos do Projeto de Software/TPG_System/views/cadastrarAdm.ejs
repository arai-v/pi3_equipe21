<%-include('partials/header.ejs')%>
    <!-- Login -->
        <div class="container-fluid plano-de-fundo3">
            <%-include('partials/navbar.ejs')%>
            <div class="row mt-5">
                <div class="col"></div>
            </div>
            <div class="row mt-5">
                <div class="d-flex justify-content-center">
                    <div class="col-4">
                        <% if (messages.danger) { %>
                            <div class="alert alert-danger">
                                <%= messages.danger %>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <div class="col-3 d-flex distancia2 bg-white rounded-4 justify-content-center">
                    <div class="row align-items-center">
                        <form action="/criarAdm" method="POST">
                            <div class="text-center altura">
                                <label class="fw-bold fs-3">Cadastro de Administrador</label>
                            </div>
                            <div class="mb-3">
                              <label class="form-label fs-5 fw-semi-bold mt-5">E-mail:</label>
                              <input type="text" class="form-control border-0 border-bottom border-secondary" id="email" name="email" required>
                            </div>
                            <div class="mb-3">
                              <label class="form-label fs-5 fw-semi-bold mt-5">Senha:</label>
                              <input type="password" class="form-control border-0 border-bottom border-secondary" id="senha" name="senha" required>
                            </div>
                            <div class="text-center mt-5">
                                <button type="submit" class="btn btn-primary fs-5 fw-semi-bold mt-5">Cadastrar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Fim Login -->
<%-include('partials/script.ejs')%>