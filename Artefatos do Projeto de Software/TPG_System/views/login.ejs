<%-include('partials/header.ejs')%>
    <!-- Login -->
        <div class="container-fluid plano-de-fundo3">
            <%-include('partials/navbar.ejs')%>
            <div class="row mt-5">
                <div class="col"></div>
            </div>
            <div class="row mt-5">
                <div class="d-flex justify-content-center">
                    <div class="col-4">
                        <% if (messages.danger) { %>
                            <div class="alert alert-danger">
                                <%= messages.danger %>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <div class="col-4 d-flex distancia2 bg-white rounded-4 justify-content-center">
                    <div class="row align-items-center">
                        <form action="/autenticar" method="POST">
                            <div class="text-center altura">
                                <label class="fw-bold fs-3">Entrar para Aventura</label>
                            </div>
                            <div class="row g-5">
                                <div class="col-md"><div>
                                    <label class="form-label fs-5 fw-semi-bold mt-5">E-mail:</label>
                              <input type="text" class="form-control border-0 border-bottom border-secondary" id="email" name="email" required>
                                  </div>
                                </div>
                              </div>
                              <div class="row g-5">
                                <div class="col-md"><div>
                                    <label class="form-label fs-5 fw-semi-bold mt-5">Senha:</label>
                              <input type="password" class="form-control border-0 border-bottom border-secondary" id="senha" name="senha" required>
                                  </div>
                                </div>
                                <div class="row d-flex justify-content-center ms-1 mt-5">
                                    <button type="submit" class="btn btn-primary">Entrar</button>
                                  </div>
                              </div>
                        </form>
                    </div>
                </div>
        </div>
    <!-- Fim Login -->
<%-include('partials/script.ejs')%>